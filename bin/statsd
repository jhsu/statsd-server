#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path(File.dirname(__FILE__) + '/../lib')
require 'yaml'
require 'optparse'

require 'statsd_server/version'
begin
  ORIGINAL_ARGV = ARGV.dup
  
  options = {:redis => true, :debug => false, :workers => 1}
  
  parser = OptionParser.new do |opts|
    opts.banner = "Usage: statsd [options]"

    opts.separator ""
    opts.separator "options:"

    opts.on("-cCONFIG", "--config-file CONFIG", "Configuration file") do |x|
     options[:config] = x 
    end
    
    opts.on("-wWORKERS", "--workers CONFIG", "Number of workers to run") do |x|
     options[:workers] = x.to_i
    end
    
    opts.on("-r", "--redis", "Flush stats to Redis") do 
     options[:redis] = true
    end
    
    opts.on("-v", "--version", "Show version") do
      puts StatsdServer::VERSION
      exit
    end

    opts.on("-d", "--debug", "Debug mode") do
      options[:debug] = true
    end

    opts.on("-h", "--help", "Show this message") do
      puts opts
      exit
    end

  end

  parser.parse!

  # dispatch
  if !options[:config] 
    puts parser.help
  else
    require 'statsd_server'
    require 'statsd_server/server'
    @workers = []
    options[:workers].times do 
      @workers << fork do 
        StatsdServer::Queue.work_diskstore!(options)
      end
      @workers << fork do 
        StatsdServer::Queue.work_aggregation!(options)
      end
    end
    StatsdServer::Server::Daemon.new.run(options.merge({:worker => @worker}))
  end
rescue Exception => e
  @workers.each do |worker|
    Process.kill("HUP", worker)
  end
  if e.instance_of?(SystemExit)
    raise
  else
    puts 'Uncaught exception'
    puts e.message
    puts e.backtrace.join("\n")
  end
end
